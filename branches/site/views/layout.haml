              .btn-group.span12
                %button.btn{:onclick=>"jsdice.doRoll('1d4');", :style=>"width: 14%"}d4
                %button.btn{:onclick=>"jsdice.doRoll('1d6');", :style=>"width: 14%"}d6
                %button.btn{:onclick=>"jsdice.doRoll('1d8');", :style=>"width: 14%"}d8
                %button.btn{:onclick=>"jsdice.doRoll('1d10');", :style=>"width: 14%"}d10
                %button.btn{:onclick=>"jsdice.doRoll('1d12');", :style=>"width: 15%"}d12
                %button.btn{:onclick=>"jsdice.doRoll('1d20');", :style=>"width: 15%"}d20
                %button.btn{:onclick=>"jsdice.doRoll('1d100');", :style=>"width: 15%"}d100
