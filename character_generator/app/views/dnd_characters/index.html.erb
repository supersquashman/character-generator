<% @dnd_characters.each do |dnd_character| %>
  <tr>
    <td><%= dnd_character.name %></td>
    <td><%= dnd_character.seed %></td>
    <td><%= dnd_character.settings %></td>
    <td><%= link_to 'Show', dnd_character %></td>
    <td><%= link_to 'Edit', edit_dnd_character_path(dnd_character) %></td>
    <td><%= link_to 'Destroy', dnd_character, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

